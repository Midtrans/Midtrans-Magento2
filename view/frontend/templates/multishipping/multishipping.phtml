            function trackResult(data, merchant_id, plugin_name, status, result) {
                var eventNames = {
                    pay: 'pg-pay',
                    success: 'pg-success',
                    pending: 'pg-pending',
                    error: 'pg-error',
                    close: 'pg-close'
                };
